<?xml version="1.0" encoding="UTF-8" ?>
<class name="DV_Grid" inherits="DVComponent" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
        <brief_description>
                Scrollable data grid for tabular datasets with themable rows, column sizing, and hover/click events.
        </brief_description>
        <description>
                DV_Grid renders structured data with a fixed header row and optional keyboard navigation. Configure column
                names, row data, and per-column widths, or let the grid stretch columns to fill the available space. Theme
                hooks expose row, selection, and header colors to match the rest of the dashboard.

                [codeblocks]
                [gdscript]
                
                extends DV_Grid

                func _ready() -> void:
                    set_columns(["Item", "SKU", "Category", "Location"])
                    set_data([
                        ["Wheat Flour", "SKU-1024", "Food", "Aisle A"],
                        ["Steel Nails", "SKU-2048", "Hardware", "Yard"],
                    ])
                    cell_clicked.connect(_on_cell_clicked)

                func _on_cell_clicked(row: int, col: int) -> void:
                    print("Row", row, "Col", col)
                [/gdscript]
                [/codeblocks]
        </description>
        <tutorials>
        </tutorials>
	<methods>
                <method name="get_col_width" qualifiers="const">
                        <return type="float" />
                        <param index="0" name="col" type="int" />
                        <description>
                                Returns the width in pixels of the column at [param col].
                        </description>
                </method>
                <method name="get_columns" qualifiers="const">
                        <return type="PackedStringArray" />
                        <description>
                                Returns the column header labels.
                        </description>
                </method>
                <method name="get_data" qualifiers="const">
                        <return type="Array[]" />
                        <description>
                                Returns the row data backing the grid as an array of arrays.
                        </description>
                </method>
                <method name="get_row_count" qualifiers="const">
                        <return type="int" />
                        <description>
                                Returns the number of rows currently loaded.
                        </description>
                </method>
		<method name="set_col_width">
			<return type="void" />
                        <param index="0" name="col" type="int" />
                        <param index="1" name="w" type="float" />
                        <description>
                                Overrides the width (in pixels) for the given column.
                        </description>
                </method>
                <method name="set_columns">
                        <return type="void" />
                        <param index="0" name="names" type="PackedStringArray" />
                        <description>
                                Sets the header labels and resets the grid layout to match.
                        </description>
                </method>
                <method name="set_data">
                        <return type="void" />
                        <param index="0" name="rows" type="Array[]" />
                        <description>
                                Populates the grid with the provided rows. Each row should match the column count.
                        </description>
                </method>
                <method name="set_grid_visible">
                        <return type="void" />
                        <param index="0" name="v" type="bool" />
                        <description>
                                Shows or hides grid lines between cells.
                        </description>
                </method>
                <method name="set_header_height">
                        <return type="void" />
                        <param index="0" name="h" type="float" />
                        <description>
                                Sets the height of the header row (in pixels).
                        </description>
                </method>
                <method name="set_keyboard_nav_enabled">
                        <return type="void" />
                        <param index="0" name="v" type="bool" />
                        <description>
                                Enables arrow-key navigation between cells when [code]true[/code].
                        </description>
                </method>
                <method name="set_row_height">
                        <return type="void" />
                        <param index="0" name="h" type="float" />
                        <description>
                                Sets the row height for all data rows (in pixels).
                        </description>
                </method>
        </methods>
	<members>
                <member name="colors/grid" type="Color" setter="set_col_grid" getter="get_col_grid" default="Color(0, 0, 0, 0.12)">
                        Color of the internal grid lines between cells.
                </member>
                <member name="colors/header_bg" type="Color" setter="set_col_header_bg" getter="get_col_header_bg" default="Color(0.18, 0.2, 0.26, 1)">
                        Background color used for the header row.
                </member>
                <member name="colors/hover" type="Color" setter="set_col_hover_bg" getter="get_col_hover_bg" default="Color(1, 1, 1, 0.06)">
                        Overlay color applied to the row under the pointer.
                </member>
                <member name="colors/row_even" type="Color" setter="set_row_even_color" getter="get_row_even_color" default="Color(0, 0, 0, 0)">
                        Fill color for even-numbered rows.
                </member>
                <member name="colors/row_odd" type="Color" setter="set_row_odd_color" getter="get_row_odd_color" default="Color(0, 0, 0, 0)">
                        Fill color for odd-numbered rows.
                </member>
                <member name="colors/selection" type="Color" setter="set_col_sel_bg" getter="get_col_sel_bg" default="Color(0.3, 0.55, 0.9, 0.2)">
                        Highlight color used for the actively selected row.
                </member>
                <member name="format/cell_padding" type="int" setter="set_cell_padding" getter="get_cell_padding" default="6">
                        Horizontal padding applied inside each cell (pixels).
                </member>
                <member name="format/stretch_mode" type="int" setter="set_stretch_mode" getter="get_stretch_mode" default="1">
                        Column stretching behavior (follow [enum StretchMode] values).
                </member>
                <member name="function/sortable" type="bool" setter="set_sortable" getter="get_sortable" default="true">
                        Enables header-based sorting when [code]true[/code].
                </member>
	</members>
	<signals>
                <signal name="cell_clicked">
                        <param index="0" name="row" type="int" />
                        <param index="1" name="col" type="int" />
                        <description>
                                Emitted when a cell is clicked. Provides row and column indices.
                        </description>
                </signal>
                <signal name="cell_hovered">
                        <param index="0" name="row" type="int" />
                        <param index="1" name="col" type="int" />
                        <description>
                                Emitted while the pointer hovers a cell.
                        </description>
                </signal>
                <signal name="header_clicked">
                        <param index="0" name="col" type="int" />
                        <description>
                                Emitted when a column header is clicked. Useful for sorting.
                        </description>
                </signal>
        </signals>
</class>
